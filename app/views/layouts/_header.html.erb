<header
  data-vue="header"
  class="header navbar navbar-fixed-top d-flex"
>
  <h1>
    <%= link_to root_path do %>
      <img src="https://quiz-site-ys.s3-ap-northeast-1.amazonaws.com/banner.svg" alt="クイズ和銅開珍" class="header__banner">
    <% end %>
  </h1>
  <span class="clear-fix"></span>
  <% if user_signed_in? %>
  <nav class="nav-item dropdown">
    <a href="#" data-toggle="dropdown">
      <span class="header__dropdown--username">
        <%= current_user.name.slice(0) %>
      </span>
    </a>
    <div class="dropdown-menu dropdown-menu-right header__dropdown">
      <div class="header__dropdown--text">
        <%= link_to "クイズ履歴", user_pages_path %>
      </div>
      <div class="header__dropdown--text">
        <%= link_to "ユーザー情報変更", edit_user_registration_path %>
      </div>
      <div>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete,
            class: "header__dropdown--logout" %>
      </div>
    </div>
  </nav>
  <% else %>
  <nav class="d-flex align-items-center">
    <%# サインインページでログインボタンを出さない %>
    <%= render 'layouts/shared/is_logout_modal' unless
        request.path.include?("sign_in") %>
    <% end %>
  </nav>
</header>
