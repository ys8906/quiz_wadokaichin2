<header class="header navbar navbar-fixed-top d-flex">
    <h1>
      <%= link_to root_path do %>
        <img src="#" alt="虫食い漢字 クイズ和銅開珍">
      <% end %>
    </h1>
  </div>
  <% if user_signed_in? %>
  <nav class="nav-item dropdown">
    <a href="#" data-toggle="dropdown">
      <span class="header__dropdown--username">ようこそ、<%= current_user.name %>さん！</span>
      <i class="far fa-smile fa-2x align-center"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-right header__dropdown">
      <div class="header__dropdown--text">
        <%= link_to "ユーザー情報変更", edit_user_registration_path %>
      </div>
      <div class="header__dropdown--text">
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary font-weight-bold" %>
      </div>
    </div>
  </nav>
  <% else %>
  <nav class="header__is-logout d-flex align-items-center">
    <%= render 'layouts/shared/is_logout_dropdown' %>
    <% end %>
  </nav>
</header>
