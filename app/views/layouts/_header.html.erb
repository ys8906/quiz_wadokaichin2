<header class="header navbar navbar-fixed-top d-flex">
    <h1>
      <%= link_to root_path do %>
        <img src="#" alt="虫食い漢字 クイズ和銅開珍">
      <% end %>
    </h1>
  </div>
  <% if user_signed_in? %>
  <div class="header__link-text">ようこそ、<%= current_user.name %>さん！</div>
  <nav class="nav-item dropdown">
    <a href="#" data-toggle="dropdown">
      <i class="far fa-smile fa-2x header__icon"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-right header__dropdown">
      <div class="header__dropdown-text">
        <%= link_to "ユーザー情報変更", edit_user_registration_path %>
      </div>
      <div class="header__dropdown-text">
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary font-weight-bold" %>
      </div>
    </div>
  </nav>
  <% else %>
  <nav class="header__is-logout d-flex align-items-center">
    <div class="header__link-text d-flex badge badge-primary">ログイン</div>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <% icon = "fab fa-twitter fa-lg fa-twitter-color",  name = "Twitter"  if provider.to_s == "twitter" %>
          <% icon = "fab fa-google fa-lg fa-google-color",    name = "Google"   if provider.to_s == "google_oauth2" %>
          <% icon = "fab fa-yahoo fa-lg fa-yahoo-color",      name = "Yahoo"    if provider.to_s == "yahoojp" %>
          <% icon = "fab fa-line fa-lg fa-line-color",        name = "Line"     if provider.to_s == "line" %>
          <%= link_to omniauth_authorize_path(resource_name, provider) do %>
            <i class="<%= icon[0].to_s %> header__icon"></i>
            <div class="header__link-text d-none d-md-block"><%= name %></div>
          <% end %>
        <% end %>
      <% end %>
    <%= render 'layouts/shared/is_logout_dropdown' %>
    <% end %>
  </nav>
</header>
